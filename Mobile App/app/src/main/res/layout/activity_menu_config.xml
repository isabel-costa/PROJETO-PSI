<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MenuConfigActivity">

    <!-- Botão Iniciar Sessão -->
    <TextView
        android:id="@+id/bg_config_topopagina"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/bg_fade_redondo"
        android:gravity="center"
        android:text="Menu de Configuração"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <!-- Card Configuração -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_proximas_consultas"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_below="@id/bg_config_topopagina"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="6dp"
        app:cardCornerRadius="16dp">

        <!-- Nome -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginTop="10dp">

        <TextView
            android:text="URL do Servidor (IP ou domínio)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txt_URLServidor"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_txt_redondo"
            android:hint="http://172.22.21.219"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <!-- Sexo -->
        <TextView
            android:text="Caminho da API"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/txt_CaminhoAPI"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_txt_redondo"
            android:hint="/SisMedCare/backend/web/"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <!-- Botão Guardar -->
        <Button
            android:id="@+id/btn_IniciarSessao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:backgroundTint="@color/Cor_Padrao"
            android:text="Guardar Configuração"
            android:textAllCaps="false" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
