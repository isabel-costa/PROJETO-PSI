<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AlergiasActivity">

<View
    android:id="@+id/bg_consultas_topopagina"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#0a936d"
    android:layout_alignParentTop="true"/>

<!-- Puxa o drawable bg_consultas_topoarredondado -->
<View
    android:id="@+id/consultas_topo"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/bg_topoactivityarredondado"
    android:layout_marginTop="60dp"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_voltar"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_titulo_atividade_alergias"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:paddingTop="16dp"/>
</RelativeLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_marginTop="70dp">

    <EditText
        android:id="@+id/bg_nome_da_doenca"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="PÃ³len (ex)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_txt_redondo" />
</LinearLayout>

</RelativeLayout>