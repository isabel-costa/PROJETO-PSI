<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomepageFragment">

    <!-- Fundo do topo da activity -->
    <View
        android:id="@+id/bg_consultas_topopagina"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_gradiente_topo_activity"
        android:layout_alignParentTop="true" />

    <!-- Puxa o drawable bg_homepage_topo_meia_lua -->
    <View
        android:id="@+id/consultas_topo"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/bg_consultas_topopagina"
        android:background="@drawable/bg_homepage_topo_meia_lua" />

    <!-- Perfil -->
    <ImageView
        android:id="@+id/btn_consultas_Perfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_perfil"/>

    <!-- Card com os dados do user -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_info_user"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_below="@id/bg_consultas_topopagina"
        android:layout_marginTop="-50dp"
        android:layout_centerHorizontal="true"
        android:elevation="8dp"
        app:cardCornerRadius="16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_nome_completo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Completo"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_num_utente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nº de utente: xxxxxxxx"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Row de cima com icons de redirecionar a outras activitys -->
    <LinearLayout
        android:id="@+id/linha_icones_cima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_info_user"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_homepage_doencas_cronicas"
                android:background="@drawable/bg_homepage_circulo"
                app:tint="@color/cor_icons_homepage"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp" />

            <TextView
                android:layout_marginTop="8dp"
                android:text="Doenças Crónicas"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_homepage_prescricao"
                android:background="@drawable/bg_homepage_circulo"
                app:tint="@color/cor_icons_homepage"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp" />

            <TextView
                android:layout_marginTop="8dp"
                android:text="Prescrição"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_homepage_alergias"
                android:background="@drawable/bg_homepage_circulo"
                app:tint="@color/cor_icons_homepage"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp" />

            <TextView
                android:layout_marginTop="8dp"
                android:text="Alergias"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <!-- Row de baixo com icons de redirecionar a outras activitys -->
    <LinearLayout
        android:id="@+id/linha_icones_baixo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linha_icones_cima"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_homepage_marcacao_de_consultas"
                android:background="@drawable/bg_homepage_circulo"
                app:tint="@color/cor_icons_homepage"
                android:layout_marginTop="14dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp" />

            <TextView
                android:layout_marginTop="8dp"
                android:text="Marcação de consultas"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_menu_consultas"
                android:background="@drawable/bg_homepage_circulo"
                app:tint="@color/cor_icons_homepage"
                android:padding="12dp" />

            <TextView
                android:layout_marginTop="8dp"
                android:text="Ver Consultas"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <!-- Card das próximas consultas -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_proximas_consultas"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_below="@id/linha_icones_baixo"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="6dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TÍTULO -->
            <TextView
                android:id="@+id/tv_homepage_proximas_consultas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próximas Consultas"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <!-- CARD DA CONSULTA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:minHeight="96dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/bg_consultas_ver_consultas_fundo_cards">

                <!-- DATA -->
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jan."
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2026"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <!-- INFO -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exame Laboratorial"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"/>

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:padding="6dp"
                        android:gravity="center"
                        android:text="Agendado"
                        android:textStyle="bold"
                        android:textColor="#EBEFF2"
                        android:background="@drawable/bg_consultas_ver_consultas_fundo_status"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora: 10:00h"
                        android:textStyle="bold"
                        android:textColor="#000"/>
                </LinearLayout>

                <!-- DELETE -->
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_consultas_verconsultas_delete"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
