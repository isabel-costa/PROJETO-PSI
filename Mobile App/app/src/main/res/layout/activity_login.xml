<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="228dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical">

    <!-- LOGO -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/logo_sismedcare"
        android:contentDescription="Logo" />

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_gravity="center_horizontal"
        android:text="Iniciar Sessão"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- LABEL EMAIL -->
    <TextView
        android:id="@+id/lb_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="E-mail"
        android:textSize="14sp" />

    <!-- INPUT EMAIL -->
    <EditText
        android:id="@+id/txt_Email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_txtlogin"
        android:hint="nome@exemplo.com"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <!-- LABEL PASSWORD -->
    <TextView
        android:id="@+id/lb_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Password"
        android:textSize="14sp" />

    <!-- INPUT PASSWORD -->
    <EditText
        android:id="@+id/txt_Password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_txtlogin"
        android:drawableEnd="@drawable/ic_reverlarpass"
        android:drawablePadding="10dp"
        android:hint="**************"
        android:inputType="textPassword"
        android:focusable="true"
        android:clickable="true"
        android:padding="10dp"
        android:paddingStart="0dp"
        android:paddingEnd="20dp" />

    <!-- BOTÃO -->
    <Button
        android:id="@+id/btn_IniciarSessao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4fb0af"
        android:text="Iniciar Sessão"
        android:textAllCaps="false" />

    <!-- TEXTO EM LINHA -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_semConta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não tem conta?"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_Registar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Registe-se"
            android:textColor="#083d6b"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>

</LinearLayout>
