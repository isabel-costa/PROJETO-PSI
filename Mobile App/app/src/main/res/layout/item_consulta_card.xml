<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="96dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="@drawable/bg_consultas_ver_consultas_fundo_cards"
    android:layout_marginBottom="25dp" >

    <!-- DATA -->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_mes_consulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan."
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_dia_consulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_ano_consulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2026"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <!-- INFO -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="20dp">

        <TextView
            android:id="@+id/txt_tipo_consulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exame Laboratorial"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/txt_estado_consulta"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:padding="6dp"
            android:gravity="center"
            android:text="Agendado"
            android:textStyle="bold"
            android:textColor="#EBEFF2"
            android:background="@drawable/bg_consultas_ver_consultas_fundo_status"/>

        <TextView
            android:id="@+id/txt_hora_consulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora: 10:00h"
            android:textStyle="bold"
            android:textColor="#000"/>
    </LinearLayout>

    <!-- DELETE -->
    <ImageView
        android:id="@+id/btn_delete_consulta"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_consultas_verconsultas_delete"/>
</LinearLayout>
