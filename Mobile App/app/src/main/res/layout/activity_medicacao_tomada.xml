<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

  <!-- Top Bar -->
  <View
      android:id="@+id/topBar"
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:background="@drawable/bg_gradiente_topo_activity"
      android:layout_alignParentTop="true" />

  <View
      android:id="@+id/topo_marcar_consultas_arredondado"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:background="@drawable/bg_topoactivityarredondado"
      android:layout_marginTop="60dp" />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_voltar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicação Tomada"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/Cor_Textos"
        android:layout_centerInParent="true"
        android:paddingTop="16dp" />
  </RelativeLayout>

  <!-- Scroll do conteúdo -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="65dp"
      android:layout_alignParentTop="true"
      android:orientation="vertical"
      android:padding="24dp">

      <!-- Card Medicação -->
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_txt_redondo"
          android:padding="16dp"
          android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/checkIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_tomada" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/checkIcon"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

          <TextView
              android:text="Nome do Medicamento"
              android:textStyle="bold"
              android:textSize="14sp"
              android:textColor="#000000"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <TextView
              android:text="Quantidade:"
              android:textSize="13sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <TextView
              android:text="Hora:"
              android:textSize="13sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
        </LinearLayout>

      </RelativeLayout>

      <!-- Duplicar este bloco para mais medicamentos -->

    </LinearLayout>
</RelativeLayout>