<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ConsultasVerConsultasActivity">

    <!-- TOPO FIXO -->
    <View
        android:id="@+id/bg_consultas_topopagina"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/bg_gradiente_topo_activity"
        android:layout_alignParentTop="true"/>

    <View
        android:id="@+id/consultas_topo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_topoactivityarredondado" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_voltar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_voltar"
            android:layout_marginTop="50dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultas"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:paddingTop="50dp"/>
    </RelativeLayout>

    <!-- Conteúdo com Scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/consultas_topo"
        android:padding="15dp"
        android:clipToPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Próximas Consultas -->
            <TextView
                android:text="Próximas Consultas"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvConsultasFuturas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#666666"
                android:layout_marginVertical="16dp"/>

            <!-- Histórico -->
            <TextView
                android:text="Histórico"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvConsultasPassadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
