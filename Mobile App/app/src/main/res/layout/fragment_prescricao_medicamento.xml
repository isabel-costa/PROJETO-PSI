<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PrescricaoMedicamentoFragment">

    <!-- Fundo verde atrás -->
    <View
        android:id="@+id/bg_prescricoes_topopagina"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_gradiente_topo_activity"
        android:layout_alignParentTop="true"/>

    <!-- Topo arredondado -->
    <View
        android:id="@+id/prescricoes_topo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_topoactivityarredondado"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/tv_prescricoes_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prescrições e Medicação"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"/>

    <!-- Botão para o perfil -->
    <ImageView
        android:id="@+id/btn_prescricoes_Perfil"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_prescricoes_titulo"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-5dp"
        android:src="@drawable/ic_perfil"/>

    <!-- CONTEÚDO PRINCIPAL (por cima do arredondado) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Prescrição -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <TextView
                    android:text="Prescrição"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvVerTudoPrescricoes"
                    android:text="Ver Tudo"
                    android:textSize="14sp"
                    android:textColor="#1A73E8"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPrescricoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"/>

            <!-- Linha separadora -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#666666"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp" />

            <!-- Acompanhamento -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <TextView
                    android:text="Acompanhamento\nda medicação"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Ver medicação tomada"
                    android:textSize="14sp"
                    android:textColor="#1A73E8"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <!-- CARD MEDICAÇÃO (ALINHADO À ESQUERDA) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_txt_redondo"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/adicionarIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_adicionar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/adicionarIcon"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="Nome do Medicamento"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Quantidade:"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Hora:"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>